{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "experimentalDecorators": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",

        "outDir": "dist",
        "sourceMap": true,

        "lib": ["es2022"],
        "composite": true,
        "declarationMap": true,
        "declaration": true,
        "rootDir": "src",
    },
    "include": ["src/**/*"],
}
